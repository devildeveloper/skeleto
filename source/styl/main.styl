@import url('foundation.min.css')
@import url('style.css')
//body elements
ul
	list-style-type  none
	margin 0
	padding 0
//components
//@import '../components/movil/menu.styl'
.sk-menu
	position fixed
	top 0
	left 0
	width 100%
	background-color transparent
	.icon-menu
		position absolute
		top 10px
		right 10px
		color #ffffff
		font-size 1.5em
		cursor  pointer
	.sk-drop
		margin-top 50px
		background-color #F4F4F4
		display none
		.selected
			color #B70821
		li
			border-bottom 1px solid white
			padding 5px
		a
			color gray
.centered
	*
		text-align center
		margin 0 auto
	img
		display  block
		margin 0 auto
//end
body
	font-family 'Open Sans', sans-serif
	color black
	font-size 16pt
	header
		background-color #B70821
		height 400px
	.about
		.skill
			margin-top 20px
			margin-bottom 20px
			h1
				font-size 1.3em
				margin-top 10px
