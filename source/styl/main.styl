@import url('foundation.min.css')
@import url('style.css')
//body elements
ul
	list-style-type  none
	margin 0
	padding 0
//components
//@import '../components/movil/menu.styl'
.sk-menu
	position fixed
	top 0
	left 0
	width 100%
	background-color #B70821
	z-index 10
	.top
		height 60px
		background-color transparent
		.icon-menu
			position absolute
			top 10px
			right 10px
			color #ffffff
			font-size 1.5em
			cursor  pointer
		.sk-drop
			margin-top 50px
			background-color #F4F4F4
			.selected
				color #B70821
			li
				border-bottom 1px solid white
				padding 5px
			a
				color gray
.centered
	*
		text-align center
		margin 0 auto
	img
		display  block
		margin 0 auto
//end
body
	font-family 'Open Sans', sans-serif
	color black
	font-size 16pt
	header
		background-color #B70821
		padding-bottom 50px
		padding-top 70px
		h1
			font-size 0.7em
			color #ffffff
			margin-top 30px
			margin-bottom 30px
	.about
		.skill
			margin-top 20px
			margin-bottom 20px
			h1
				font-size 1.3em
				margin-top 10px
	.portafolio
		background-color #B70821
		h1
			color white
			padding-top 20px
			padding-bottom 80px
		.galery
			li
				display table-cell
				font-size 0
				img
					display block
					width 100%
	footer
		background-color #B70821
		padding-top 30px
		padding-bottom 10px
		.hide-for-large-up
			height 40px
			background-color white
			margin-top 30px
			margin-bottom 30px
		.inline-list
			display table
			margin 0 auto
			li
				&:first-child
					margin-left 0
				a
					width 40px
					height 40px
					border-radius 50%
					background-color white
					position relative
					text-align center
					span
						display inline-block
						vertical-align  bottom
						font-size 1.2em
						color  #B70821
						padding-top 10px
		p
			margin-top 30px
			color #ffffff