//variables
red_color = rgb(162,28,38) 
.red_color_bg
	background-color red_color
.red_color_font
	color red_color
.white_color_font
	color #ffffff
//helpers
.bottom_p_30
	padding-bottom 30px
.top_p_30
	padding-top 30px
.slick-dots li.slick-active button::before
	color white
.slick-dots li button::before
	color white
.block
	display block
	width 100%
//body elements
*,h1,h2,h3,h4,h5,h6
	color rgb(108, 111, 112) 
ul
	list-style-type  none
	margin 0
	padding 0
a
	color inherit
	&:hover
		color inherit
fieldset
	outline none
	border 0
input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="datetime-local"], input[type="month"], input[type="week"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], input[type="color"], textarea
	border-radius 5px
button[type="submit"]
	background-color red_color
	color #ffffff
	border-radius 5px
textarea
	resize none
//components
.sk-menu
	position fixed
	top 0
	left 0
	width 100%
	z-index 9
	.top
		height 50px
		background-color red_color
.sk-menu.sk-desktop
	display none
	color white
	.top
		padding 10px
	*
		color inherit
	ul.icons
		color red_color
		li
			width 30px
			height 30px
			border-radius 50%
			background-color white
			a
				display block
				height 100%
				span
					display inline-block
					margin-left 8px
					margin-top 7px
					&.icon-facebook
						font-weight bolder
						margin-left 6px
						margin-top 5px

.sk-menu.sk-movil
	background-color red_color
	z-index 10
	.top
		height 60px
		background-color transparent
	.icon-menu
		position absolute
		top 10px
		right 10px
		color #ffffff
		font-size 1.5em
		cursor  pointer
		width 40px
		height 40px
		z-index 8
	.sk-drop
		z-index 9
		background-color #F4F4F4
		display none
		.selected
			color red_color
		li
			border-bottom 1px solid white
			padding 5px
		a
			color gray
.centered
	*
		text-align center
		margin 0 auto
	img
		display  block
		margin 0 auto
#services-slick
	.slick-prev,.slick-next
		background-size 100%
		background-position 0 0
		width 50px
		height 40px
		&::before
			content  ""
	.slick-prev
		left 0
		background-image url(../images/btn_bangrisOver.png)
	.slick-next
		right 0
		background-image url(../images/btn_bangris.png)
	.slick-dots li button::before
		font-size 20px
	.slick-dots li.slick-active button::before
		color red_color
	.slick-dots li button::before,.slick-dots li button::before
		color lightgray
//end
body
	font-family 'Open Sans', sans-serif
	font-size 16px
	header
		background-color red_color
		padding-bottom 50px
		h1
			font-size 0.7rem
			color #ffffff
			margin-top 30px
			margin-bottom 30px
	.logo
		width 60%
		max-width 200px
	.about
		.sk-skill
			margin-top 20px
			&:nth-child(1)
				margin-top 50px
			h1
				font-size 1em
				text-align  center
			p
				text-align center
			img
				border-radius 50%
				display block
				margin 0 auto
		.doge
			display block
			margin  0 auto
			margin-top 50px
			border-radius 50%
			width 450px
			height 450px
	.portafolio
		background-color red_color
		*
			color white
		h1
			font-size 1em
		.galery
			li
				display inline-flex
				width 50%
				cursor pointer
				overflow hidden
				margin-top -8px
				.content
					position relative
					img
						width 100%
					.description
						position absolute
						left 0
						bottom -50px
						width 100%
						height 50px
						background-color rgba(0,0,0,.5)
						p
							color #ffffff
							padding 5px

	#services
		.small-12
			padding-top 40px
			padding-bottom 40px
	footer
		background-color red_color
		padding-top 20px
		padding-bottom 10px
		margin-top 30px
		color #ffffff
		.inline-list
			display table
			margin 0 auto
			a
				border-radius 50%
				width 30px
				height 30px
				color red_color
				background-color white
				padding-top 3px
		p
			color white
			padding-top 10px

@media screen and (min-width:64.063em)
	.sk-menu.sk-desktop
		display block
	.sk-menu.sk-movil
		display none
	.hide-for-large-up
		display none
	button
		width 50px
		height 50px
		border-radius 50%
		margin 0 auto
		position relative 
		display block
		color red
	body
		.about
			.sk-skill
				h1
					text-align  left
				p
					text-align left
				img
					border-radius 50%
					display block
					margin 0 auto
		.portafolio
			background-color red_color
			*
				color white
			h1
				font-size 1em
			.galery
				li
					display inline-flex
					width 33%