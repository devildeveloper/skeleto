@import url('foundation.min.css')
@import url('style.css')
//body elements
ul
	list-style-type  none
	margin 0
	padding 0
a
	color inherit
	&:hover
		color inherit
//components
//@import '../components/movil/menu.styl'
.sk-menu
	position fixed
	top 0
	left 0
	width 100%
	z-index 9
	.top
		height 50px
		background-color #B70821
.sk-menu.sk-desktop
	display none
	color white
	.top
		padding 10px
	*
		color inherit
	ul.icons
		color #B70821
		li
			width 30px
			height 30px
			border-radius 50%
			background-color white
			a
				display block
				height 100%
				span
					display inline-block
					margin-left 8px
					margin-top 7px

.sk-menu.sk-movil
	background-color #B70821
	z-index 10
	.top
		height 60px
		background-color transparent
	.icon-menu
		position absolute
		top 10px
		right 10px
		color #ffffff
		font-size 1.5em
		cursor  pointer
		width 40px
		height 40px
		z-index 8
	.sk-drop
		z-index 9
		background-color #F4F4F4
		display none
		.selected
			color #B70821
		li
			border-bottom 1px solid white
			padding 5px
		a
			color gray
.centered
	*
		text-align center
		margin 0 auto
	img
		display  block
		margin 0 auto
//end
body
	font-family 'Open Sans', sans-serif
	color black
	font-size 16pt
	header
		background-color #B70821
		padding-bottom 50px
		padding-top 70px
		h1
			font-size 0.7em
			color #ffffff
			margin-top 30px
			margin-bottom 30px
	.about
		.skill
			margin-top 20px
			margin-bottom 20px
			h1
				font-size 1.3em
				margin-top 10px
	footer
		background-color #B70821
		padding-top 20px
		padding-bottom 10px
		margin-top 30px
		color #ffffff
		.inline-list
			display table
			margin 0 auto
			a
				border-radius 50%
				width 30px
				height 30px
				color #B70821
				background-color white
				padding-top 3px
		p
			color white
			padding-top 10px

@media screen and (min-width:64.063em)
	.sk-menu.sk-desktop
		display block
	.sk-menu.sk-movil
		display none
	.portafolio
		background-color #B70821
		h1
			color white
			padding-top 20px
			padding-bottom 80px
		.galery
			li
				display table-cell
				font-size 0
				img
					display block
					width 100%

